{
    "swagger": "2.0",
    "definitions": {
        "userInfo": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "description": "First Name"
                },
                "lastName": {
                    "type": "string",
                    "description": "Last Name"
                },
                "email": {
                    "type": "string",
                    "description": "Email ID"
                },
                "Password": {
                    "type": "string",
                    "description": "Password"
                }
            },
            "example": {
                "firstName": "Dhiraj",
                "lastName": "Rathod",
                "email": "dhirajrat@gmail.com",
                "Password": "AbcdS@34#5.35"
            }
        },
        "loginInfo": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "description": "Email ID"
                },
                "Password": {
                    "type": "string",
                    "description": "Password"
                }
            },
            "example": {
                "email": "dhirajrat@gmail.com",
                "Password": "AbcdS@34#5.35"
            }
        },
        "forgetInfo": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "description": "Email ID"
                }
            },
            "example": {
                "email": "dhirajrat@gmail.com"
            }
        },
        "resetpassword": {
            "type": "object",
            "properties": {
                "Password": {
                    "type": "string",
                    "description": "new password for user."
                }
            },
            "example": {
                "Password": "Asds521@#df"
            }
        },
        "createnote": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Title of Note."
                },
                "description": {
                    "type": "string",
                    "description": "Description of Note created."
                }
            },
            "example": {
                "title": "Hello Note",
                "description": "This is my first Note"
            }
        },
        "createlabel": {
            "type": "object",
            "properties": {
                "labelName": {
                    "type": "string",
                    "description": "Title of Label."
                }
            },
            "example": {
                "labelName": "Grocerry"
            }
        }
    },
    "info": {
        "version": "1.0.0",
        "title": "fundoonotes",
        "description": "This is a Note Taking Service App",
        "licence": {
            "name": "MIT Licence",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:8000",
    "tags": [
        {
            "name": "Fundoo Notes",
            "description": "Registration And Login API"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "Registration"
                ],
                "description": "Create a new user in the Fundoo Notes",
                "parameters": [
                    {
                        "name": "User Registration",
                        "in": "body",
                        "description": "The created user",
                        "schema": {
                            "$ref": "#definitions/userInfo"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "schema": {
                    "$ref": "#definitions/userInfo"
                },
                "responses": {
                    "201": {
                        "description": "New User Created"
                    },
                    "409": {
                        "description": "User already exist"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "User Login"
                ],
                "description": "If registered then You can Login using Email and Password",
                "parameters": [
                    {
                        "name": "User Login",
                        "in": "body",
                        "description": "login with Ligin Info",
                        "schema": {
                            "$ref": "#definitions/loginInfo"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "schema": {
                    "$ref": "#definitions/userInfo"
                },
                "responses": {
                    "200": {
                        "description": "Link Send Success"
                    },
                    "403": {
                        "description": "Incorrect info Unable to send link"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/forgetpassword": {
            "post": {
                "tags": [
                    "User Forget Password"
                ],
                "description": "If registered then You can recovered forget Password using Email",
                "parameters": [
                    {
                        "name": "User Forget Password",
                        "in": "body",
                        "description": "Recover Password with Info",
                        "schema": {
                            "$ref": "#definitions/forgetInfo"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "schema": {
                    "$ref": "#definitions/userInfo"
                },
                "responses": {
                    "200": {
                        "description": "Login Success"
                    },
                    "403": {
                        "description": "Incorrect login info Unable to login"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/resetpassword": {
            "post": {
                "tags": [
                    "reset password"
                ],
                "description": "Already registered ? Then reset password successfully !!",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "token for validation",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Reset Password",
                        "in": "body",
                        "description": "Reset Password with token",
                        "schema": {
                            "$ref": "#/definitions/resetpassword"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "reset password succesfully !!"
                    },
                    "401": {
                        "description": "Incorrect Password for reset password"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/createnote": {
            "post": {
                "tags": [
                    "Create New Note"
                ],
                "description": "Create A new Note with Title and description !!",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "token for validation",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Create Note",
                        "in": "body",
                        "description": "Create New Note",
                        "schema": {
                            "$ref": "#/definitions/createnote"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "Note Created succesfully !!"
                    },
                    "401": {
                        "description": "Incorrect type Of Note"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/getallnotes": {
            "get": {
                "tags": [
                    "Get All Notes"
                ],
                "description": "Get All notes of user !!",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "token for validation",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "All Notes fetch succesfully !!"
                    },
                    "401": {
                        "description": "Incorrect Request"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/getnotesbyid/{id}": {
            "get": {
                "tags": [
                    "Get Note by ID"
                ],
                "description": "Get notes of user by ID !!",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "token for validation",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Notes fetch succesfully !!"
                    },
                    "401": {
                        "description": "Incorrect Request"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/updatenotesbyid/{id}": {
            "put": {
                "tags": [
                    "Update Note by ID"
                ],
                "description": "Update notes of user by ID !!",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "token for validation",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Update Note",
                        "in": "body",
                        "description": "Create New Note",
                        "schema": {
                            "$ref": "#/definitions/createnote"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Notes Update succesfully !!"
                    },
                    "401": {
                        "description": "Incorrect Request"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/deletenote/{id}": {
            "delete": {
                "tags": [
                    "Delete Note by ID"
                ],
                "description": "Delete notes of user by ID !!",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "token for validation",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Notes update succesfully !!"
                    },
                    "401": {
                        "description": "Incorrect Request"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}